<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomTheme" parent="AppTheme.NoActionBar">
        
    </style>
    
    <style name="ExpandedTitleSize" parent="@android:style/TextAppearance">
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="LoginTheme" parent="AppTheme.NoActionBar">
        <item name="android:colorControlNormal">#ffffff</item>
        <item name="colorControlNormal">#ffffff</item>
        <item name="android:colorControlActivated">#ffffff</item>
        <item name="colorControlActivated">#ffffff</item>
        <item name="android:colorControlHighlight">#fff</item>
        <item name="colorControlHighlight">#fff</item>
        <item name="android:textColorHint">#fff</item>
    </style>

</resources>
