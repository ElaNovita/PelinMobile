<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/messageCv"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:elevation="1dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/senderImg"
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ciel"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"/>
            <TextView
                android:id="@+id/sender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/senderImg"
                android:text="Ciel Phantomhive"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="20dp"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/sendAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mon 9.40 AM"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/messageContent"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:padding="2dp"
                android:layout_marginTop="16dp"
                android:layout_below="@id/sender"
                android:layout_toRightOf="@id/senderImg"
                android:layout_marginLeft="20dp"
                android:text="@string/message_display"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>