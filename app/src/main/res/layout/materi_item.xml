<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#dedede">
    <LinearLayout
        android:id="@+id/passed"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark"/>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="30"
        android:layout_height="100dp"
        android:padding="16dp"
        android:background="@drawable/border"
        android:layout_marginBottom="1dp">

        <ImageView
            android:id="@+id/bookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_title_black_24dp"/>
        <TextView
            android:id="@+id/materiTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Judul Materi 1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/bookmark"
            android:layout_marginLeft="8dp"/>
        <ImageView
            android:id="@+id/timeIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/materiTitle"
            android:src="@drawable/ic_access_time_black_24dp"
            android:layout_marginTop="12dp"/>
        <TextView
            android:id="@+id/posted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/materiTitle"
            android:layout_toRightOf="@id/timeIcon"
            android:text="17 March 16 09.30 AM"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="8dp"/>
    </RelativeLayout>

</LinearLayout>